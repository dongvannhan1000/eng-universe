generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Vocab {
  id             Int      @id @default(autoincrement())
  word           String
  meaningVi      String
  explanationEn  String
  sourceUrl      String?      // link YouTube/podcast
  tags           String[]     // mảng tag đơn giản
  addedAt        DateTime @default(now())
  lastReviewedAt DateTime?     // lần ôn gần nhất
  notes          String?

  @@index([addedAt])
  @@index([lastReviewedAt])
}


